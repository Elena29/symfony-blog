{
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Domain\\": "Domain/",
            "Infrastructure\\": "Infrastructure/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Unit\\": "tests/unit/"
        }
    },
    "require": {
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^3.3",
        "symfony/dotenv": "^3.3",
        "symfony/yaml": "^3.3",
        "ramsey/uuid": "~3.0",
        "doctrine/collections": "^1.5",
        "friendsofsymfony/rest-bundle": "^2.2",
        "jms/serializer-bundle": "^2.2"
    },
    "require-dev": {
        "phing/phing": "2.*",
        "codeception/codeception": "*",
        "phpunit/phpunit": "~4.0",
        "codeception/c3": "^2.0",
        "squizlabs/php_codesniffer": "2.*"
    },
    "scripts": {
        "auto-scripts": {
            "make cache-warmup": "script",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    }
}
